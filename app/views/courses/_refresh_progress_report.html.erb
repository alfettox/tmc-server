<div style="width: 90%; margin: 0 auto;">
  <% if refresh_initialized  %>
    <h5>Course template refresh has been initialized</h5>
  <% end %>
  <div class="jumbotron" id="refresh-progress-div" style="display: none">
    <h5>Refresh progress:</h5>

    <div class="progress my-2" style="background-color: #A9A9A9">
      <div id="refresh-progress-bar" class="progress-bar progress-bar-striped" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0 %</div>
    </div>

    <div id="refresh-progress-row" class="row"></div>
  </div>
</div>