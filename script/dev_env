#!/usr/bin/screen -c
caption always
caption string "%w %=| %H %c"

defscrollback 10000
zombie qr
verbose on

screen rails s
title "rails server"

screen bundle exec script/background_daemon run
title "background"

screen tail -f log/background_daemon.log
title "background log"

screen -d -m bash -c "cd ext/sandbox; npm run dev"
title "sandbox"
